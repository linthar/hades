    margin-bottom: 10px;
}

.v-menubar-menuitem-caption:hover {
	color: #DDDDDD; 
}


.v-menubar-menu .v-menubar-menuitem {
    display: block;
    border: 0px;
    font-size: 16px;
    min-width: 0.75em;
