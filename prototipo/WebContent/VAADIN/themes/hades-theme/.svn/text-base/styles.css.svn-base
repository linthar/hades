/**
 * Buttons
 */ 
.saveButton,
.delete,
.primary,
.v-nativebutton {
    padding: 1px;
    border: none;
    background: transparent;
    display: block;
    font-size: 12px;
    border: 1px solid #bdc1c2;
    border-top-color: #cbcfd0;
    border-bottom-color: #b6bbbb;
    border-color: rgba(146,151,152,.8);
    border-top-color: rgba(146,151,152,.6);
    background: #e6e8e8 url(images/button-bg.png) repeat-x;
    -webkit-background-origin: padding;
    -moz-background-origin: padding;
    padding: 3px 15px;
    -webkit-border-radius: 11px;
    -moz-border-radius: 11px;
    border-radius: 11px;
    line-height: 14px;
    min-height: 14px;
    -webkit-box-shadow: 0 1px 0 rgba(0,0,0,.15);
    -moz-box-shadow: 0 1px 0 rgba(0,0,0,.15);
    text-shadow: 0 1px 0 #fff;
    color: #464f52;
    overflow: hidden;
    text-overflow: ellipsis;
    
    transition: border 500ms;
    -moz-transition: border 500ms;
    -webkit-transition: border 500ms;
    -o-transition: border 500ms;
}
.saveButton:focus,
.delete:focus,
.primary:focus,
.v-nativebutton:focus {
    outline: none;
    border-color: #57a7ed;
    border-top-color: #60aef1;
    border-bottom-color: #4c9adf;
    -webkit-box-shadow: 0 0 2px #57a7ed;
    -moz-box-shadow:  0 0 2px #57a7ed;
}  
.saveButton:active,
.delete:active,
.primary:active,
.v-nativebutton:active {
    background-position: 0 -79px;
    background-color: #e7e9e9;
    border-color: #b8bdbe;
    border-top-color: #9da1a2;
    border-bottom-color: #babfc0;
    border-color: rgba(146,151,152,.9);
    border-top-color: rgba(146,151,152,1);
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.4) inset;
    -moz-box-shadow: 0 1px 2px rgba(0,0,0,.4) inset;;
    text-shadow: none;
}
.saveButton:hover,
.delete:hover,
.primary:hover,
.v-nativebutton:hover {
    border: 1px solid #4D90FE; 
}




.link,
